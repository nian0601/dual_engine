SamplerState LinearSampler : register(s0);
Texture2D AlbedoTexture : register(t0);

struct VS_OUTPUT
{
    float4 Pos : POSITION;
    float2 Tex : TEXCOORD;
    float4 Color : COLOR;
};

float4 PS(VS_OUTPUT input) : SV_TARGET
{
	float alpha = AlbedoTexture.Sample(LinearSampler, input.Tex).x;

	float4 color = input.Color;
	color.w = alpha;
	return color;
};